  ],
  "author": "Ivan Rubio <ivan@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivrusson/wildmask.git"
  },
  "homepage": "https://github.com/ivrusson/wildmask#readme",
  "bugs": {
    "url": "https://github.com/ivrusson/wildmask/issues"
