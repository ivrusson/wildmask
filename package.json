{
  "name": "wildmask",
  "version": "0.1.0",
  "type": "module",
  "description": "Modern CLI + TUI for managing local DNS masks with wildcard support",
  "keywords": [
    "dns",
    "cli",
    "tui",
    "dev-tools",
    "local-development"
  ],
  "author": "Ivan Rubio",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "wildmask": "./packages/cli/dist/cli.js"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "postinstall": "node scripts/postinstall.js",
    "setup": "pnpm build && node packages/cli/dist/cli.js setup",
    "start": "node packages/cli/dist/cli.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "serve": "^14.2.5"
  }
}
